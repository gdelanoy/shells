#!/bin/bash
#####################################################
# Nom du script : mano.sh
# Utilité: Ce script sert à obtenir plus d'aide avec man que la seule page de manuel
# Usage: ... (le cas échéant)
# Auteur: Guillaume Delanoy <gdelanoy@gmail.com>
# License: Ce script est sous license GPL v3.
# Veuillez consulter https://www.gnu.org/licenses/quick-guide-gplv3.fr.html
# Créé le: dimanche_20/10/2019 à 20h31
#####################################################
#
for i ; do
                xtitle The $(basename $1|tr -d .[:digit:]) manual
                        command man -a "$i"
                            done
done



